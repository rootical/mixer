{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "ESNext",
        "allowJs": true,
        "jsx": "react",
        "preserveConstEnums": true,
        "declaration": true
    },
    "include": [
        "./src/**/*"
    ]
}